use_frameworks!

abstract_target 'ObjcTests' do
  pod 'SGVSuperMessagingProxy/Objective-C', :path => "../"
  target 'OSXObjcTests' do
      platform :osx, '10.8'
  end
  target 'iOSObjcTests' do
      platform :ios, '7.0'
  end
  target 'tvOSObjcTests' do
      platform :tvos, '9.0'
  end
end

