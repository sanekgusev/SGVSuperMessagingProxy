    pod 'SGVSuperMessagingProxy/Swift', :path => "../"
    target 'OSXSwiftTests' do
        platform :osx, '10.9'
    end
    target 'iOSSwiftTests' do
        platform :ios, '8.0'
    end
    target 'tvOSSwiftTests' do
        platform :tvos, '9.0'
    end
end
